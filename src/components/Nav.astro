---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<style lang="scss">
.header {
  text-align: center;

  @media (min-width: 600px) {
    display: flex;
    align-items: center;
    padding: 2rem;
  }
}

.title {
  margin: 0;
  font-size: 1.2em;
  letter-spacing: -0.03em;
  font-weight: 400;
  margin-right: 1em;
}

.nav {
  text-align: center;

  @media (min-width: 600px) {
    display: flex;
  }
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

li {
  margin: 0;
}

a {
  display: block;
  font-size: 1.2em;
  letter-spacing: -0.02em;
  margin-left: 0.75em;
  margin-right: 0.75em;
}

.home {
  text-decoration: none;
}
</style>

<nav class="header">
  
  <ul class="nav">
    <li><a href="/" class="home"><h1 class="title">{title}</h1></a></li>
    <li><a href="/posts">All Posts</a></li>
    <li><a href="/author/don">Author: Don</a></li>
    <li><a href="/author/sancho">Author: Sancho</a></li>
    <li><a href="/about">About</a></li>
  </ul>
</nav>
